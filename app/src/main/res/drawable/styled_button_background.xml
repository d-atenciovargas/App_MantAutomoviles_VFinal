        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#0057D8" /> <!-- Color al presionar -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#007BFF" /> <!-- Color normal -->
        </shape>
    </item>
</selector>
